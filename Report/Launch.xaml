<Window x:Class="Report.Launch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Настройки" Height="120" Width="200" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterOwner" Padding="20,20,20,20" SizeToContent="WidthAndHeight">
    <StackPanel>
        <GroupBox Header="Альбом КР" Margin="5">
            <StackPanel>
                <TextBox x:Name="LaunchTextBox" Text="зап. вручную" Margin="5" TextWrapping="Wrap" />
            </StackPanel>
        </GroupBox>

        <Button Content="ОК" HorizontalAlignment="Right" Width="40" Click="OK_Click" IsDefault="True" Margin="5" />
    </StackPanel>
</Window>